<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:startColor="#FF5A74"
                android:endColor="#FF9355"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="oval" >
            <gradient

                android:endColor="#F8F7F5"
                android:startColor="#F3F2F0"
                android:type="linear"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>